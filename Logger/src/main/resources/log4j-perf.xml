<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">

  <Properties>
    <Property name="patternLayout">%level{length=1} %d{ISO8601} %c{1.} %m [%t]%n</Property>
  </Properties>

  <Appenders>
    <RollingFile name="FILE" fileName="logs/server.log"
      filePattern="logs/server-%d{yyyy-MM-dd-HH}.log">
      <PatternLayout pattern="${patternLayout}"/>
      <Policies>
        <OnStartupTriggeringPolicy/>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="50 MB"/>
      </Policies>
    </RollingFile>
  </Appenders>

  <Loggers>
    <AsyncLogger name="io.scalecube.config.audit" level="error"/>
    <AsyncRoot level="${env:logLevel:-error}">
      <AppenderRef ref="FILE"/>
    </AsyncRoot>
  </Loggers>

</Configuration>
