<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Properties>
    <Property name="patternLayout">%level{length=1} %d{ISO8601} %c{1.} %m [%t]%n</Property>
  </Properties>

  <Appenders>
    <RollingFile name="FILE" fileName="logs/server.log" filePattern="logs/server-%d{yyyy-MM-dd-HH}.log">
      <PatternLayout pattern="${patternLayout}"/>
      <Policies>
        <OnStartupTriggeringPolicy/>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="50 MB"/>
      </Policies>
    </RollingFile>
  </Appenders>

  <Loggers>
    <Logger name="io.scalecube.config.audit" level="error"/>
    <Root level="info">
      <AppenderRef ref="FILE"/>
    </Root>
  </Loggers>

</Configuration>
